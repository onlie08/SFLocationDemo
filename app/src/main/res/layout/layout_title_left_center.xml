<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    >

    <Button
        android:id="@+id/left_bt"
        style="@style/titlesize_666"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@null"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="@dimen/dm015"
        android:paddingLeft="@dimen/title_left_bt_padding_left"
        android:paddingRight="@dimen/dm010" />

    <com.sfmap.api.location.demo.view.custom_widgets.MarqueTextView
        android:id="@+id/center_tv"
        style="@style/titlesize_212121_bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center"
        android:maxWidth="@dimen/dm440"
        android:paddingRight="@dimen/dm030"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="" />

    <Button
        android:id="@+id/title_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:paddingTop="@dimen/dm003"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm030"
        android:text=""
        android:textColor="@color/color666"
        android:textSize="@dimen/dm026"
        android:visibility="gone" />
</RelativeLayout>