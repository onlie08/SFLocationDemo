<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <com.sfmap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </com.sfmap.api.maps.MapView>

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_left_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/info_show_bt"
        android:layout_width="@dimen/dm120"
        android:layout_height="@dimen/dm060"
        android:layout_marginRight="@dimen/dm120"
        android:layout_marginBottom="@dimen/main_margin_left_x"
        android:background="@drawable/selector_bt_5px"
        android:onClick="onInfoShowClick"
        android:text="@string/show_info"
        android:textColor="@color/white"
        android:textSize="@dimen/dm024"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>